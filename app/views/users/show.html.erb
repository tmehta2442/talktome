<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <h5>
        <% if current_user.admin? %>
          <%= link_to "new events", newevents_path %>
          <% else %>
          not admin
        <% end %>
      </h5>
    </section>
  </aside>
</div>