<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:event, url: newevents_path) do |f| %>
      <%= f.label :event_name %>
      <%= f.text_field :event_name %>

      <%= f.label :start_time %>
      <%= f.date_field :start_time %>

      <%= f.submit "Create my event", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>